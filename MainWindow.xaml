<Window x:Class="Sea_Battle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sea_Battle"
        mc:Ignorable="d"
        Title="Морской бой" Height="600" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Строка статуса -->
        <TextBlock Grid.Row="0" Text="{Binding StatusText}" 
                   FontSize="16" HorizontalAlignment="Center" Margin="10" FontWeight="Bold"/>

        <!-- Игровые поля -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Поле игрока -->
            <StackPanel Grid.Column="0" Margin="10,0">
                <TextBlock Text="Ваше поле" FontSize="14" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,0,0,5"/>
                <ItemsControl ItemsSource="{Binding PlayerCells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="10" Columns="10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black" BorderThickness="0.5" Width="25" Height="25">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="LightBlue"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding State}" Value="Ship">
                                                <Setter Property="Background" Value="Gray"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="Hit">
                                                <Setter Property="Background" Value="Red"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="Miss">
                                                <Setter Property="Background" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding DisplayText}" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"
                                           FontWeight="Bold"/>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Поле компьютера -->
            <StackPanel Grid.Column="1" Margin="10,0">
                <TextBlock Text="Поле противника" FontSize="14" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,0,0,5"/>
                <ItemsControl ItemsSource="{Binding ComputerCells}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Rows="10" Columns="10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="Black" BorderThickness="0.5" Width="25" Height="25">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="Background" Value="LightBlue"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding State}" Value="Hit">
                                                <Setter Property="Background" Value="Red"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="Miss">
                                                <Setter Property="Background" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Button Command="{Binding DataContext.ComputerCellClickCommand, 
                                        RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Background="Transparent" 
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <TextBlock Text="{Binding DisplayText}" 
                                               FontWeight="Bold"/>
                                </Button>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>

        <!-- Кнопка начала игры -->
        <Button Grid.Row="2" Content="Начать игру" Command="{Binding StartGameCommand}"
                HorizontalAlignment="Center" Margin="10" Padding="20,5" FontSize="14"/>
    </Grid>
</Window>