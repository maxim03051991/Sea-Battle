<Window x:Class="Sea_Battle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sea_Battle"
        mc:Ignorable="d"
        Title="Морской бой" Height="600" Width="800">

    <Grid Background="WhiteSmoke">
        <!-- Макет: Заголовок | Игровые поля | Кнопка -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Центрирующий контейнер для полей -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

            <!-- Левое поле (игрок) -->
            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="4" Margin="0,0,20,0">
                <StackPanel>
                    <TextBlock Text="Ваше поле" FontSize="16" HorizontalAlignment="Center"
                               FontWeight="Bold" Margin="0,0,0,10"/>
                    <ItemsControl ItemsSource="{Binding PlayerCells}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="10" Columns="10"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Black" BorderThickness="0.5" Width="25" Height="25">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="LightBlue"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="Ship">
                                                    <Setter Property="Background" Value="Gray"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="Hit">
                                                    <Setter Property="Background" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="Miss">
                                                    <Setter Property="Background" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding DisplayText}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontWeight="Bold"/>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Правое поле (компьютер) -->
            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="4" Margin="20,0,0,0">
                <StackPanel>
                    <TextBlock Text="Поле противника" FontSize="16" HorizontalAlignment="Center"
                               FontWeight="Bold" Margin="0,0,0,10"/>
                    <ItemsControl ItemsSource="{Binding ComputerCells}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Rows="10" Columns="10"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="Black" BorderThickness="0.5" Width="25" Height="25">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="LightBlue"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding State}" Value="Hit">
                                                    <Setter Property="Background" Value="Red"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding State}" Value="Miss">
                                                    <Setter Property="Background" Value="White"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <Button Command="{Binding DataContext.ComputerCellClickCommand,
                                                RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Margin="0" Padding="0">
                                        <TextBlock Text="{Binding DisplayText}"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Button>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Строка статуса -->
        <TextBlock Grid.Row="0"
                   Text="{Binding StatusText}"
                   FontSize="18" HorizontalAlignment="Center"
                   Margin="0,10,0,10" FontWeight="Bold"/>

        <!-- Кнопка начала игры -->
        <Button Grid.Row="2"
                Content="{Binding StartButtonText}"
                Command="{Binding StartGameCommand}"
                HorizontalAlignment="Center" Margin="0,10,0,10"
                Padding="20,5" FontSize="16"/>
    </Grid>
</Window>