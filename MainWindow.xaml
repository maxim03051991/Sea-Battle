<Window x:Class="Sea_Battle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sea_Battle"
        xmlns:model="clr-namespace:Sea_Battle.model"
        xmlns:services="clr-namespace:Sea_Battle.services"
        xmlns:Converters="clr-namespace:Sea_Battle.Converters"
        xmlns:ViewModels="clr-namespace:Sea_Battle.ViewModels"
        mc:Ignorable="d"
        Title="Морской бой" Height="700" Width="900">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <Converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <Converters:MineUsedConverter x:Key="MineUsedConverter"/>

        <!-- Стиль для клетки -->
        <Style x:Key="CellBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Width" Value="25"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Background" Value="LightBlue"/>
            <Style.Triggers>
                <!-- Корабль -->
                <DataTrigger Binding="{Binding State}" Value="Ship">
                    <Setter Property="Background" Value="Gray"/>
                </DataTrigger>
                <!-- Попадание -->
                <DataTrigger Binding="{Binding State}" Value="Hit">
                    <Setter Property="Background" Value="Red"/>
                </DataTrigger>
                <!-- Промах -->
                <DataTrigger Binding="{Binding State}" Value="Miss">
                    <Setter Property="Background" Value="White"/>
                </DataTrigger>
                <!-- Мина -->
                <DataTrigger Binding="{Binding State}" Value="Mine">
                    <Setter Property="Background" Value="Yellow"/>
                </DataTrigger>
                <!-- Попадание в мину -->
                <DataTrigger Binding="{Binding State}" Value="MineHit">
                    <Setter Property="Background" Value="Orange"/>
                </DataTrigger>
                <!-- Использованная мина -->
                <DataTrigger Binding="{Binding State}" Value="MineUsed">
                    <Setter Property="Background" Value="LightGray"/>
                </DataTrigger>
                <!-- Подсвеченный корабль (от мины) -->
                <DataTrigger Binding="{Binding State}" Value="RevealedShip">
                    <Setter Property="Background" Value="Gold"/>
                    <Setter Property="BorderBrush" Value="DarkOrange"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </DataTrigger>
                <!-- Запрещенная клетка -->
                <DataTrigger Binding="{Binding State}" Value="Forbidden">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Opacity" Value="0.5"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для текста в клетке -->
        <Style x:Key="CellTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Style.Triggers>
                <!-- Для подсвеченного корабля увеличиваем шрифт -->
                <DataTrigger Binding="{Binding State}" Value="RevealedShip">
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="Foreground" Value="DarkRed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- ==================== СТАРТОВЫЙ ЭКРАН ==================== -->
        <Grid x:Name="StartupScreen"
              Background="LightBlue"
              Visibility="Visible"
              Panel.ZIndex="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Выберите режим игры"
                           FontSize="20"
                           FontWeight="Bold"
                           Margin="0,0,0,20"/>
                <Button Content="Классическая игра"
                        Click="ClassicGame_Click"
                        Padding="20,10"
                        FontSize="16"
                        Background="LightGreen"
                        Margin="0,0,0,10"/>
                <Button Content="Игра по новым правилам"
                        Click="NewRulesGame_Click"
                        Padding="20,10"
                        FontSize="16"
                        Background="LightYellow"/>
            </StackPanel>
        </Grid>

        <!-- ==================== ГЛАВНЫЙ ИГРОВОЙ ЭКРАН ==================== -->
        <Grid x:Name="GameScreen"
              Background="WhiteSmoke"
              Visibility="Collapsed"
              Panel.ZIndex="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Строка статуса -->
            <TextBlock Grid.Row="0"
                       Text="{Binding StatusText}"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,10"
                       FontWeight="Bold"/>

            <!-- Панель кораблей + выбор размера доски -->
            <Border Grid.Row="1"
                    Background="LightGray"
                    Padding="10"
                    Margin="10"
                    CornerRadius="5"
                    Visibility="{Binding IsManualPlacement, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <!-- Панель кораблей -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Доступные корабли:"
                                   FontSize="14"
                                   FontWeight="Bold"
                                   Margin="0,0,10,0"/>
                        <ListBox ItemsSource="{Binding ShipPlacer.AvailableShips}"
                                 Background="Transparent"
                                 BorderThickness="0">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding DisplayName}"
                                            Command="{Binding DataContext.SelectShipCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Margin="5,0"
                                            Padding="10,5"
                                            FontSize="12"
                                            Background="LightBlue"
                                            BorderBrush="DarkBlue"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                        <!-- Отображение выбранного корабля -->
                        <TextBlock Text="{Binding ShipPlacer.SelectedShip.Name, StringFormat='Выбран: {0}'}"
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   Margin="20,0,0,0"
                                   Visibility="{Binding IsNewRulesMode, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <Button Content="Повернуть корабль"
                                Command="{Binding RotateShipCommand}"
                                Margin="20,0,0,0"
                                Padding="10,5"
                                FontSize="12"
                                Background="LightGreen"
                                BorderBrush="DarkGreen"
                                Visibility="{Binding IsNewRulesMode, Converter={StaticResource InverseBooleanToVisibilityConverter}}"/>
                    </StackPanel>

                    <!-- Панель выбора размера доски (только для новых правил) -->
                    <StackPanel Orientation="Horizontal"
                                Margin="0,10,0,0"
                                Visibility="{Binding IsNewRulesMode, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <TextBlock Text="Размер доски:"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Margin="0,0,10,0"/>
                        <Button Content="15 x 15"
                                Width="90" Height="30" Margin="0,0,5,0"
                                Command="{Binding ChangeBoardSizeCommand}"
                                CommandParameter="15"/>
                        <Button Content="16 x 16"
                                Width="90" Height="30" Margin="0,0,5,0"
                                Command="{Binding ChangeBoardSizeCommand}"
                                CommandParameter="16"/>
                        <Button Content="17 x 17"
                                Width="90" Height="30" Margin="0,0,5,0"
                                Command="{Binding ChangeBoardSizeCommand}"
                                CommandParameter="17"/>
                        <Button Content="18 x 18"
                                Width="90" Height="30" Margin="0,0,5,0"
                                Command="{Binding ChangeBoardSizeCommand}"
                                CommandParameter="18"/>
                        <Button Content="19 x 19"
                                Width="90" Height="30" Margin="0,0,5,0"
                                Command="{Binding ChangeBoardSizeCommand}"
                                CommandParameter="19"/>
                        <Button Content="20 x 20"
                                Width="90" Height="30"
                                Command="{Binding ChangeBoardSizeCommand}"
                                CommandParameter="20"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Поля -->
            <StackPanel Grid.Row="2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <!-- Поле игрока -->
                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="4" Margin="0,0,20,0">
                    <StackPanel>
                        <TextBlock Text="Ваше поле"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding PlayerCells}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="{Binding SizeBoard}" Columns="{Binding SizeBoard}"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CellBorderStyle}">
                                        <Grid>
                                            <!-- Кнопка для ручной расстановки И выбора клетки после мины -->
                                            <Button Command="{Binding DataContext.PlayerCellClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Visibility="{Binding DataContext.IsPlayerBoardInteractive,
                                                                         Converter={StaticResource BooleanToVisibilityConverter},
                                                                         RelativeSource={RelativeSource AncestorType=Window}}">
                                                <StackPanel>
                                                    <TextBlock Style="{StaticResource CellTextStyle}"
                                                               Text="{Binding DisplayText}"/>
                                                    <!-- Точка для использованной мины -->
                                                    <Ellipse Width="6" Height="6" Fill="Black" 
                                                             HorizontalAlignment="Center" VerticalAlignment="Center"
                                                             Visibility="{Binding State, Converter={StaticResource MineUsedConverter}}"/>
                                                </StackPanel>
                                            </Button>

                                            <!-- Простое отображение (без кнопки) -->
                                            <StackPanel Visibility="{Binding DataContext.IsPlayerBoardInteractive,
                                                                              Converter={StaticResource InverseBooleanToVisibilityConverter},
                                                                              RelativeSource={RelativeSource AncestorType=Window}}">
                                                <TextBlock Style="{StaticResource CellTextStyle}"
                                                           Text="{Binding DisplayText}"/>
                                                <!-- Точка для использованной мины -->
                                                <Ellipse Width="6" Height="6" Fill="Black" 
                                                         HorizontalAlignment="Center" VerticalAlignment="Center"
                                                         Visibility="{Binding State, Converter={StaticResource MineUsedConverter}}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>

                <!-- Поле компьютера -->
                <Border BorderBrush="Black" BorderThickness="1" CornerRadius="4" Margin="20,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Поле противника"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,10"/>
                        <ItemsControl ItemsSource="{Binding ComputerCells}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Rows="{Binding SizeBoard}" Columns="{Binding SizeBoard}"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource CellBorderStyle}">
                                        <Grid>
                                            <!-- Кнопка для выстрела -->
                                            <Button Command="{Binding DataContext.ComputerCellClickCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Cursor="Hand">
                                                <StackPanel>
                                                    <TextBlock Style="{StaticResource CellTextStyle}"
                                                               Text="{Binding DisplayText}"/>
                                                    <!-- Точка для использованной мины -->
                                                    <Ellipse Width="6" Height="6" Fill="Black" 
                                                             HorizontalAlignment="Center" VerticalAlignment="Center"
                                                             Visibility="{Binding State, Converter={StaticResource MineUsedConverter}}"/>
                                                </StackPanel>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Кнопка начала игры -->
            <Button Grid.Row="3"
                    Content="{Binding StartButtonText}"
                    Command="{Binding StartGameCommand}"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,10"
                    Padding="20,5"
                    FontSize="16"/>
        </Grid>
    </Grid>
</Window>